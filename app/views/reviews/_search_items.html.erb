<div class="product-list">

		<% $i = 1 %>
		<div class="product-sublist">
		Choose product of this review:
			<% locals[:items].each do |item| %>
				<div class="one-item" id="<%= $i %>">
					<%= image_tag item.imageUrl %>
					<div class="title<%= $i %>"><%= item.productTitle %></div>
				</div>
				<% $i += 1 %>
			<% end %>
		</div>
</div>

<script type="text/javascript">
      $(function() {
		$('.one-item').click(function() {
		$id = $(this).attr("id");
		});
		$( ".one-item" ).on( "click", function() {
			$value = $('div.title'+$id).text();
			$('.search-product').val($value).prop("readonly", true);
			$('.search-product').css("background-color", "#bdc3c7");
			$('.product-sublist').fadeOut();
		});
      });
 </script>