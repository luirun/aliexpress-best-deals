<div class="well">
    <h4><i class="fa fa-book"></i> Featured products:</h4>
		<div class="row">
		<% @popular_items = Item.where(:is_hot => "y").order("RAND()").limit(5)  #limit%5==0%>
		<% @popular_items.each do |item| %>	 
			<div class="col-lg-12">
				<div class="cuadro_intro_hover" style="background-color:#cccccc;">
					<p style="text-align:center;">
						<%= image_tag item.imageUrl, :class => "img-responsive" %>
					</p>
					
				<div class="caption">
					<div class="blur"></div>
					<div class="caption-text text-center">
						<h3 style="border-top:2px solid white; border-bottom:2px solid white; padding:10px; overflow:hidden; height:150px;"><%= simple_format(item.productTitle) %></h3>
						<p></p>
						<%= link_to item_path(pretty_url_encode(item.productTitle)), :class => "btn btn-default" do %>
							<i class="fa fa-plus"></i> More</span>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<% end %>
		</div>
	</div>
</div>