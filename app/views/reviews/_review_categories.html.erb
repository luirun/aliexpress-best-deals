<div class="col-lg-12 text-center">
	<h3>Categories:</h3>
		<div class="col-lg-push-4 col-lg-5 text-left" style="margin:auto;">
        <ul class="text-left">
        	<% categories = Category.all.limit(7) %>
        	<% categories.each do |category| %>
				<li><h4><i class="<%= category.icon %> fa-1x" style="margin-right:3px;"></i><%= link_to category.name, search_category_items_path(category.name,1) %></h4></li>
			<% end %>
		</ul>
		</div>
</div>