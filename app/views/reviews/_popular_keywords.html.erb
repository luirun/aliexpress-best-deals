<div class="well">
    <h4><i class="fa fa-tags"></i> Popular Tags:</h4>
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled">

                <% @review.keywords.split(",").each do |keyword| %>
                    <%= link_to search_keyword_path(keyword) do %>
                        <li><span class="badge badge-info"><%= keyword %></span></li>
                    <% end %>
                <% end %>

            </ul>
        </div>
    </div>
</div>