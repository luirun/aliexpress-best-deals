</head>


    <div class="container">

        <div class="row">
            <div class="col-lg-8">
            
                <h1><%= @review.title %></h1>
                <p class="lead">
					<i class="fa fa-user"></i>
                    <% $user = User.find(@review.author) %>
					by <%= link_to $user.nickname, search_author_path($user.nickname) %>
                </p>
                <hr>
                <p><i class="fa fa-calendar"></i> Posted on <%= @review.created_at %></p>
				<p>
					<i class="fa fa-tags"></i> 
					Tags: <% @review.keywords.split(",").each do |keyword| %>
						<%= link_to search_keyword_url(keyword) do %>
							<span class="badge badge-info"><%= keyword %></span>
						<% end %>
					<% end %>
					
                <hr>
                <%= image_tag @review.cover.url, :class => "img-responsive" %>
                <hr>

                <div class="col-lg-12">
                    <div class="col-lg-3 text-center">
                        <h4>Price: <b><%= @review.price %> USD</b></h4>
                    </div>

                    <div class="col-lg-6 text-center">
                        <h4>Product rating:</h4>
                        <h4 style="display:inline-block;"><b><%= @review.rating %>/5.0</b></h4>
                        <% for i in 0..@review.rating-1 %>
                            <span class="fa fa-star fa-2x"></span>
                        <% end %>

                        <% if @review.rating%1 != 0 %>
                            <span class="fa fa-star-half-o fa-2x"></span>
                            <% for i in 0...5-(@review.rating+0.5) %>
                                <span class="fa fa-star-o fa-2x"></span>
                            <% end %>
                        <% else %>
                            <% for i in 0...5-@review.rating %>
                                <span class="fa fa-star-o fa-2x"></span>
                            <% end %>
                        <% end %>
                    </div>

                    <div class="col-lg-3 text-center">
                        <%= link_to "Buy It Now", Item.where(:productId => @review.productId).first.promotionUrl, :class => "btn btn-default btn-lg", :target => "_blank" %>
                    </div>
                </div>
                <hr style="width:100%;float:left;">



                <p class="lead"><%= simple_format(@review.long_description) %></p>
                <hr>

                <%= render "comments/comments" %>
                <%= render "comments/comment_form" %>

            </div>

            <div class="col-lg-4">
			
				<%# rendering searchbox %>
				<%= render "searchbox" %>
				
				<%# rendering popular keywords box %>
                <%= render "popular_keywords" %>
				
				<%# render social sharing box %>
				<%= render "social_sharing" %>
				
                <%# render popular reviews box %>
				<%= render "popular_reviews" %>
				
                <%= render "popular_items" %>

			</div>
			<%# render popular items box %>
			
            
        <div class="lg-md-12">
			<%# render 6 reviews categories %>
			<%= render "review_categories" %>
                        
        </div>

<div class="col-md-12 text-center">
    <p>Copyright Â© AliBestDeal.com</p>
</div>
					
					
					
        </footer>

</div>