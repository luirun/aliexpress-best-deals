<div class="well">
  <h4><i class="fa fa-book"></i> Featured products:</h4>
  <div class="row">
  <%# section made to intelligent product suggestions %>
  <% $like = "%#{@review.title.parameterize(separator: '%')}%" %>
  <% @popular_products = Product.where("productTitle LIKE ?", $like).order("RAND()").limit(5)  #limit%5==0%>
  <% $like_incr = 1 %>
  <% while @popular_products[0].nil? %>
    <% @popular_products = Product.where("productTitle LIKE ?", "%#{$like.split("%")[$like_incr]}%").order("RAND()").limit(5)  #limit%5==0%>
    <% $like_incr += 1 %>
  <% end %>

  <% @popular_products.each do |product| %>  
    <div class="col-lg-12">
      <div class="cuadro_intro_hover" style="background-color:#cccccc;">
        <p style="text-align:center;">
          <%= image_tag product.imageUrl, class: "img-responsive" %>
        </p>
          
        <div class="caption">
          <div class="blur"></div>
            <div class="caption-text text-center">
              <h3 style="border-top:2px solid white; border-bottom:2px solid white; padding:10px; overflow:hidden; height:150px;">
                <%= simple_format(product.productTitle) %>
              </h3>
              <p></p>
              <%= link_to product_path(pretty_url_encode(product.productTitle)), class: "btn btn-default" do %>
                <i class="fa fa-plus"></i> More</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>