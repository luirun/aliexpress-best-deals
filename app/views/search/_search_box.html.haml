.container
  .row
    %h2 Search for products:
    .col-sm-12.text-center{style: 'margin-bottom:10px;'}
      = form_tag({ controller: 'search', action: 'search_product' }, method: 'get') do
        #imaginary_container
          .input-group.stylish-input-group.input-append
            = text_field_tag :name, nil, class: 'form-control', placeholder: 'Search'
            %span.input-group-addon
              = button_tag nil, class: 'form_submit' do
                %span.glyphicon.glyphicon-search
