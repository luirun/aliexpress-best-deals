!!!
%html
  %head
    = csrf_meta_tags
    = display_meta_tags
    = favicon_link_tag 'favicon.ico'
    = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "iDl8Yv5OI3qo32w1XQ5xM2IUbwfEkLpFmbg0UdvB8os", :name => "google-site-verification"}/

    %script{:async => "", :src => "//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"}
    :javascript
      (adsbygoogle = window.adsbygoogle || []).push({
        google_ad_client: "ca-pub-6222054838117933",
        enable_page_level_ads: true
      });
  %body
    - if session[:return_to] == nil
      - session[:return_to] = root_url
    = render "layouts/navbar"
    = render "layouts/login_modal"
    .container
      - flash.each do |name, msg|
        - if notice
          %p.alert.alert-success= notice.html_safe
        - if alert
          %p.alert.alert-danger= alert.html_safe
      = yield
    = render "/layouts/ad"

