= simple_form_for(@users, url: users_create_path) do |form|
  = form.error_notification
  = form.input :email
  = form.input :login
  = form.label :password
  = form.password_field :password
  = form.label :password_confirmation
  = form.password_field :password_confirmation
  = form.input :name
  = form.input :surname
  = form.button :submit, 'Register', class: 'submit'
= link_to "Login", {controller: "sessions", action: "new"}, class: "button"
